<section id="portfolio" class="py-5">
    <div class="container">
        <h2 class="section-title">Portfolyo</h2>
        <div class="row">
            @foreach (var project in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="portfolio-item" data-category="@project.Category">
                        <img src="@(project.ImageUrl.StartsWith("/") ? project.ImageUrl : "/" + project.ImageUrl)" alt="@project.Title">
                        <div class="portfolio-overlay">
                            <h4>@project.Title</h4>
                            <div class="portfolio-actions">
                                <button class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#detailsModal@(project.Id)">
                                    <i class="fas fa-info-circle me-1"></i>Detaylar
                                </button>
                                <button class="btn btn-outline-light btn-sm" data-bs-toggle="modal" data-bs-target="#demoModal@(project.Id)">
                                    <i class="fas fa-play-circle me-1"></i>Demo
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="text-center mt-4">
            <a asp-controller="Home" asp-action="Portfolio" class="btn btn-primary">Tüm Projeleri Gör</a>
        </div>
    </div>
</section>

<section id="contact" class="contact-section">
    <div class="container">
        <h2 class="section-title">İletişim</h2>
        <div class="row">
            <div class="col-lg-7">
                <div class="contact-card">
                    <form id="contactForm" class="contact-form">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="text" id="name" class="form-control" placeholder="Adınız" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input type="email" id="email" class="form-control" placeholder="E-posta Adresiniz" required>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <input type="text" id="subject" class="form-control" placeholder="Konu" required>
                        </div>
                        <div class="form-group">
                            <textarea id="message" class="form-control" placeholder="Mesajınız" required></textarea>
                        </div>
                        <button type="button" id="sendMailtoButton" class="btn btn-primary">İletişime Geç</button>
                    </form>
                </div>
            </div>
            <div class="col-lg-5">
                <div class="contact-info">
                    <div class="contact-info-item">
                        <div class="contact-info-icon">
                            <i class="fas fa-map-marker-alt"></i>
                        </div>
                        <div class="contact-info-content">
                            <h5>Adres</h5>
                            <p>Şanlıurfa, Türkiye</p>
                            <p>Elazığ, Türkiye</p>
                        </div>
                    </div>
                    <div class="contact-info-item py-5">
                        <div class="contact-info-icon">
                            <i class="fas fa-envelope"></i>
                        </div>
                        <div class="contact-info-content">
                            <h5>E-posta</h5>
                            <p>omeremlik.dev@gmail.com</p>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Proje Modals -->
@foreach (var project in Model)
{
    <!-- Proje Detay Modal -->
    <div class="modal fade" id="detailsModal@(project.Id)" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@project.Title - Detaylar</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <img src="@(project.ImageUrl.StartsWith("/") ? project.ImageUrl : "/" + project.ImageUrl)" alt="@project.Title" class="img-fluid rounded mb-3">
                        </div>
                        <div class="col-md-6">
                            <h6>Proje Açıklaması</h6>
                            <p>@project.Description</p>
                            
                            <h6>Kullanılan Teknolojiler</h6>
                            <div class="technology-tags">
                                @foreach (var tech in project.Technologies)
                                {
                                    <span class="technology-tag">
                                        <i class="fas fa-code"></i> @tech
                                    </span>
                                }
                            </div>
                            
                            <h6>Özellikler</h6>
                            <p class="features-text">
                                @string.Join(". ", project.Features)
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Proje Demo Modal -->
    <div class="modal fade" id="demoModal@(project.Id)" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@project.Title - Demo</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body text-center">
                    <img src="@project.GifUrl" alt="@project.Title Demo" class="img-fluid rounded" />
                </div>
            </div>
        </div>
    </div>
}
