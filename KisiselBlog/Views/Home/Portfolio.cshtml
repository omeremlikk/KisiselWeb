</div>

<!-- Proje 2 Demo Modal -->
<div class="modal fade" id="demoModal2" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">To-Do List Uygulaması - Demo</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <img src="~/images/proje2.gif" alt="To-Do List Demo" class="img-fluid rounded" />
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var options = {
                strings: ['Web Developer', 'Backend Developer', '.NET Developer', 'Software Engineer'],
                typeSpeed: 50,
                backSpeed: 30,
                loop: true,
                showCursor: true,
                cursorChar: '|'
            };

            var typed = new Typed('#typed-output', options);
        });

        // Portfolyo filtreleme
        $(document).ready(function() {
            $('.portfolio-filter .btn').click(function() {
                $('.portfolio-filter .btn').removeClass('active');
                $(this).addClass('active');

                var filter = $(this).data('filter');
                if (filter === 'all') {
                    $('#portfolio-items > div').show();
                } else {
                    $('#portfolio-items > div').hide();
                    $('#portfolio-items > div[data-category="' + filter + '"]').show();
                }
            });
        });
    </script>
} 