@{
    ViewData["Title"] = "Portfolyo";
}

<nav class="navbar navbar-expand-sm navbar-dark portfolio-navbar">
    <div class="container">
        <a class="navbar-brand" href="/">
            Ömer Emlik
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/">Ana Sayfaya Dön</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div id="portfolio-page">
    <div class="portfolio-hero">
        <div class="portfolio-hero-content">
            <div class="typed-container">
                <h1 id="typed-output" style="margin: 0; font-size: 2.5rem; color: #ffffff; min-height: 60px;"></h1>
            </div>
            <div class="social-icons">
                <a href="https://github.com/yourusername" target="_blank"><i class="fab fa-github"></i></a>
                <a href="https://linkedin.com/in/yourusername" target="_blank"><i class="fab fa-linkedin"></i></a>
                <a href="https://instagram.com/yourusername" target="_blank"><i class="fab fa-instagram"></i></a>
            </div>
        </div>
    </div>

    <div class="portfolio-filter">
        <div class="container">
            <div class="d-flex justify-content-center">
                <button class="btn btn-outline-dark active" data-filter="all">Tümü</button>
                <button class="btn btn-outline-dark" data-filter="web">Web Projelerim</button>
                <button class="btn btn-outline-dark" data-filter="frontend">Frontend Tasarımlarım</button>
            </div>
        </div>
    </div>

    <div class="container mb-5">
        <div id="portfolio-items">
            <div class="portfolio-item" data-category="frontend">
                <img src="~/images/proje1.png" alt="Kişisel Blog Projesi">
                <div class="portfolio-overlay">
                    <h4>Kişisel Blog Projesi</h4>
                    <p>ASP.NET Core MVC ile geliştirilmiş modern blog sitesi</p>
                    <div class="mt-3">
                        <button class="btn btn-light me-2" data-bs-toggle="modal" data-bs-target="#detailsModal1">Detaylar</button>
                        <button class="btn btn-light" data-bs-toggle="modal" data-bs-target="#demoModal1">Demo</button>
                    </div>
                </div>
            </div>

            <div class="portfolio-item" data-category="all">
                <img src="~/images/proje2.png" alt="To-Do List Uygulaması">
                <div class="portfolio-overlay">
                    <h4>To-Do List Uygulaması</h4>
                    <p>React ve .NET Core Web API ile geliştirilmiş görev yönetim uygulaması</p>
                    <div class="mt-3">
                        <button class="btn btn-light me-2" data-bs-toggle="modal" data-bs-target="#detailsModal2">Detaylar</button>
                        <button class="btn btn-light" data-bs-toggle="modal" data-bs-target="#demoModal2">Demo</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

